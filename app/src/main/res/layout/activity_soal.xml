<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Soal.SoalActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="SOAL"
        android:textAlignment="center"
        android:textColor="#13B3D8"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android studio adalah aplikasi yang membuat aplikasi pada platform?"
        android:textColor="#13B3D8"
        android:textSize="35sp"
        android:layout_below="@id/judul"
        android:layout_marginTop="70dp">
    </TextView>

    <Button
        android:id="@+id/buttonA1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#13B3D8"
        android:text="A. iOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="jawabanA"
        android:layout_below="@id/soal1" />

    <Button
        android:id="@+id/buttonB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#13B3D8"
        android:text="B. WIndows Phone"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="jawabanB"
        android:layout_below="@id/buttonA1"/>

    <Button
        android:id="@+id/buttonC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#13B3D8"
        android:text="C. android"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="jawabanC"
        android:layout_below="@id/buttonB1"/>

    <Button
        android:id="@+id/buttonD1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#13B3D8"
        android:text="D. blackberry"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="jawabanD"
        android:layout_below="@id/buttonC1"/>
</RelativeLayout>